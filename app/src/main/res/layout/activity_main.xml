<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/text"
            android:layout_width="match_parent"
            android:layout_height="100dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp">

        <Button
            android:id="@+id/btn_reset"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.25"
            android:layout_margin="2dp"
            android:background="@drawable/button_round"
            android:text="AC"
            android:textSize="50dp"
            android:textColor="@color/white"/>

        <Button
            android:id="@+id/btn_PM"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.25"
            android:layout_margin="2dp"
            android:background="@drawable/button_round"
            android:text="+/-"
            android:textSize="50dp"
            android:textColor="@color/white"/>

        <Button
            android:id="@+id/btn_per"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.25"
            android:layout_margin="2dp"
            android:background="@drawable/button_round"
            android:text="%"
            android:textSize="50dp"
            android:textColor="@color/white"/>

        <Button
            android:id="@+id/btn_div"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.25"
            android:layout_margin="2dp"
            android:background="@drawable/button_round"
            android:text="/"
            android:textSize="50dp"
            android:textColor="@color/white"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp">

        <Button
            android:id="@+id/btn7"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.25"
            android:layout_margin="2dp"
            android:background="@drawable/button_round_pink"
            android:text="7"
            android:textSize="50dp"
            android:textColor="@color/white"/>

        <Button
            android:id="@+id/btn8"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.25"
            android:layout_margin="2dp"
            android:background="@drawable/button_round_pink"
            android:text="8"
            android:textSize="50dp"
            android:textColor="@color/white"/>

        <Button
            android:id="@+id/btn9"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.25"
            android:layout_margin="2dp"
            android:background="@drawable/button_round_pink"
            android:text="9"
            android:textSize="50dp"
            android:textColor="@color/white"/>

        <Button
            android:id="@+id/btn_mul"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.25"
            android:layout_margin="2dp"
            android:background="@drawable/button_round"
            android:text="x"
            android:textSize="50dp"
            android:textColor="@color/white"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp">

        <Button
            android:id="@+id/btn4"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.25"
            android:layout_margin="2dp"
            android:background="@drawable/button_round_pink"
            android:text="4"
            android:textSize="50dp"
            android:textColor="@color/white"/>

        <Button
            android:id="@+id/btn5"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.25"
            android:layout_margin="2dp"
            android:background="@drawable/button_round_pink"
            android:text="5"
            android:textSize="50dp"
            android:textColor="@color/white"/>

        <Button
            android:id="@+id/btn6"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.25"
            android:layout_margin="2dp"
            android:background="@drawable/button_round_pink"
            android:text="6"
            android:textSize="50dp"
            android:textColor="@color/white"/>

        <Button
            android:id="@+id/btn_minus"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.25"
            android:layout_margin="2dp"
            android:background="@drawable/button_round"
            android:text="-"
            android:textSize="50dp"
            android:textColor="@color/white"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp">

        <Button
            android:id="@+id/btn1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.25"
            android:layout_margin="2dp"
            android:background="@drawable/button_round_pink"
            android:text="1"
            android:textSize="50dp"
            android:textColor="@color/white"/>

        <Button
            android:id="@+id/btn2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.25"
            android:layout_margin="2dp"
            android:background="@drawable/button_round_pink"
            android:text="2"
            android:textSize="50dp"
            android:textColor="@color/white"/>

        <Button
            android:id="@+id/btn3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.25"
            android:layout_margin="2dp"
            android:background="@drawable/button_round_pink"
            android:text="3"
            android:textSize="50dp"
            android:textColor="@color/white"/>

        <Button
            android:id="@+id/btn_plus"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.25"
            android:layout_margin="2dp"
            android:background="@drawable/button_round"
            android:text="+"
            android:textSize="50dp"
            android:textColor="@color/white"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_weight="0.5"
            android:layout_margin="2dp"
            android:layout_height="100dp">

            <Button
                android:id="@+id/btn0"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/button_round_pink"
                android:text="0"
                android:textSize="50dp"
                android:textColor="@color/white"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_weight="0.5"
            android:layout_height="100dp">

            <Button
                android:id="@+id/btn_dec"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.25"
                android:layout_margin="2dp"
                android:background="@drawable/button_round_pink"
                android:text="."
                android:textSize="50dp"
                android:textColor="@color/white"/>

            <Button
                android:id="@+id/btn_result"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.25"
                android:layout_margin="2dp"
                android:background="@drawable/button_round"
                android:text="="
                android:textSize="50dp"
                android:textColor="@color/white"/>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>








